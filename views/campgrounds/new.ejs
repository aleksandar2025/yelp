<% include ../partials/nav %>

   <div class="row"> 
        <h1 class="col-sm-12 text-center">Create a New Campground</h1>
        <div style="width: 30; margin: 100px auto; ">
            <form action="/campgrounds" method="POST">
               <div class="form-group">
                     <input class="form-control" type="text" name="name" placeholder="name">
               </div>
               <div class="form-group">
                     <input class="form-control" type="number" name="price" placeholder="value" min="0.01" step="0.01">
               </div>
               <div class="form-group">
                     <input class="form-control" type="text" name="image" placeholder="image ulr">
               </div>
               <div class="form-group" >
                   <input class="form-control" type="text" name="description" placeholder="description">
               </div>
                <div class="form-group">
                    <button class="btn btn-m btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="col-sm-12" href="/campgrounds">View campgrounds</a>
        </div>
        
    </div>

