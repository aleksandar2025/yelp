<% include ../partials/header %>
<% include ../partials/nav %>

<% if(currentUser && currentUser.isAdmin) { %>
    <h1>Hello admin</h1>
<% } %>

    <header class="jumbotron">
        <div class="container">    
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
              <div class="container-fluid">
                    <div class="row">
                       <p>
                           <a class="btn btn-primary btn-lg-12 btn-sm-3 mr-1" href="/">Back to the landing page</a>
                       </p>
                       <p>
                          <a class="btn btn-primary btn-lg-12 btn-sm-3 ml-1" href="/campgrounds/new">Post a new campground</a> 
                       </p>
                    </div>
               </div> 
            </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>Our Most popular sites</h3>
        </div>
        
    </div>
    
    <div class="row">
    <% campgrounds.forEach(function(campgrounds){ %>
        <div class="col-lg-3 col-md-6">
                <figure class="figure">
                    <img class="figure-img img-fluid rounded" src="<%= campgrounds.image %>">
                  <figcaption class="figure-caption text-center"><%= campgrounds.name %></figcaption>
             </figure>
             <p>
                 <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More info</a>
             </p>
        </div>
    <% }); %>
    
    </div>

<% include ../partials/footer %>